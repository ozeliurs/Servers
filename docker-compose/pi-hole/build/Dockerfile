ARG PIHOLE_VERSION
FROM pihole/pihole:${PIHOLE_VERSION:-latest}
RUN apt update && apt install -y unbound

COPY --chown=root unbound-pihole.conf /etc/unbound/unbound.conf.d/pi-hole.conf
COPY --chown=root 99-edns.conf /etc/dnsmasq.d/99-edns.conf
RUN mkdir -p /etc/services.d/unbound
COPY --chown=root unbound-run /etc/services.d/unbound/run

ENTRYPOINT ./s6-init